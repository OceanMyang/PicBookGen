<!-- Require { filename: string, fileContent: string } -->

<%- include('header', { title: filename }) %>
    <nav class="navbar navbar-expand">
        <a style="height: 2em;" class="d-inline-block" id="index-button" href="/">
            <img style="height: 2em; border: none; " src="/res/file.png" alt="Back">
        </a>
        <div id="title-container" class="btn-light"><%- filename -%>
        </div>
    </nav>
    <div class="row no-gutters">
        <div class="col">
            <div class="leftside" id="text-viewer"><%- fileContent -%></div>
        </div>
        <div class="col">
            <img class="rightside" id="image-viewer" src="" alt="">
        </div>
    </div>
    <div>
        <% scripts.forEach(script=> { -%>
            <script type="module" src="/js/<%= script %>"></script>
            <% }) %>
    </div>
    <%- include('footer') %>