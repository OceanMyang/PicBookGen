<!-- Require { filename: string, fileContent: string, scripts: string[] } -->

<%- include('header', { title: filename }) %>

	<body>
		<nav class="navbar navbar-expand">
			<a style="height: 2em;" class="d-inline-block" id="index-button" href="/">
				<img style="height: 2em; border: none; " src="/res/file.png" alt="Back">
			</a>
			<div id="title-container" class="btn-light" contenteditable="plaintext-only"><%- filename -%></div>
		</nav>
		<nav class="split-view navbar navbar-expand">
			<div id="file-menu">
				<button id="save-button" class="btn btn-primary">Save</button>
				<button id="new-button" class="btn btn-primary">New</button>
				<button id="upload-button" class="btn btn-primary">Upload</button>
				<form id="input-form" class="d-none" action="/upload" method="post" enctype="multipart/form-data">
					<input id="input" type="file" accept=".txt" name="file" class="d-none">
				</form>
				<button id="dump-button" class="btn btn-primary">Delete</button>
			</div>
			<div id="action-menu">
				<button id="image-button" type="button" class="btn btn-primary">Image</button>
			</div>
		</nav>
		<div class="split-view">
			<div id="text-viewer" contenteditable="plaintext-only"><%- fileContent -%></div>
			<div>
				<img id="image-viewer" src="" alt="">
			</div>
		</div>
	</body>
	<div>
		<% scripts.forEach(script=> { -%>
			<script src="/js/<%= script %>"></script>
			<% }) %>
	</div>
	<%- include('footer') %>