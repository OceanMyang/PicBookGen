<!-- Require { fileName: string, fileContent: string, scripts: string[] } -->

<%- include('header', { title: fileName }) %>

	<body>
		<nav class="navbar navbar-expand">
			<a style="height: 2em;" class="d-inline-block" id="index-button" href="/">
				<img style="height: 2em; border: none; " src="/res/file.ico" alt="Back">
			</a>
			<div id="title-container" class="btn-light" contenteditable="plaintext-only"><%- fileName -%></div>
		</nav>
		<nav class="split-view navbar navbar-expand">
			<div id="file-menu">
				<button id="save-button" class="btn btn-primary">Save</button>
				<button id="new-button" class="btn btn-primary" onclick="newButton()">New</button>
				<button id="upload-button" class="btn btn-primary">Upload</button>
				<button id="delete-button" class="btn btn-primary">Delete</button>
			</div>
			<div id="image-menu">
				<button id="image-button" type="button" class="btn btn-primary">Image</button>
			</div>
		</nav>
		<div class="split-view">
			<div id="text-viewer" contenteditable="plaintext-only"><%- fileContent -%></div>
			<div>
				<img id="image-viewer" src="" alt="">
			</div>
		</div>
		<!-- Hidden Modal -->
		<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="modalLongTitle">Modal title</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body"></div>
				</div>
			</div>
		</div>
	</body>
	<% scripts.forEach(script=> { -%>
		<script src="/js/<%= script %>"></script>
		<% }) %>
			<%- include('footer') %>